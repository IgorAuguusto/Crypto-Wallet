<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder:"Bitcoin" %>
  </div>

  <div class="mb-3">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"BTC" %>
  </div>

  <div class="mb-3">
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class:"form-control",  placeholder:"http://image/bitcoin.png" %>
  </div>

  <div class="mb-3">
    <%= form.label :mining_type %>
    <%= form.select :mining_type_id, MiningType.all.collect { |mining_type| [mining_type.description, mining_type.id] }, { include_blank: t("new.mining_types") }, class: "form-select" %>
  </div>
  
  <div>
    <%= form.submit nil, class:"btn btn-primary" %>
  </div>
<% end %>
  